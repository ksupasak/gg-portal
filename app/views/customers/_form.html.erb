<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :short %>
    <%= form.text_field :short %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :website %>
    <%= form.text_field :website %>
  </div>

  <div class="field">
    <%= form.label :contact_name %>
    <%= form.text_field :contact_name %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div class="field">
    <%= form.label :registered_at %>
    <%= form.text_field :registered_at, :type=>'date', :class=>'form-control' %>
  </div>

  <div class="field">
    <%= form.label :logo %>
    <%= form.text_field :logo %>
  </div>

  <div class="field">
    <%= form.label :commercial_name %>
    <%= form.text_field :commercial_name %>
  </div>

  <div class="field">
    <%= form.label :commercial_address %>
    <%= form.text_field :commercial_address %>
  </div>

  <div class="field">
    <%= form.label :tax_id %>
    <%= form.text_field :tax_id %>
  </div>

  <div class="field">
    <%= form.label :group_id %>
    <%= form.select :group_id, options_for_select(CustomerGroup.all.collect{|i| [i.name,i.id]},customer.group_id) %>
  </div>
  
  
  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, options_for_select(User.all.collect{|i| [i.name,i.id]},customer.user_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<p id="notice"><%= notice %></p>

<h1>Customer Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>User</th>
      <th>Registered at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_users.each do |customer_user| %>
      <tr>
 
        <td><%= customer_user.customer.name if customer_user.customer%></td>
		<td><%= customer_user.user.email if customer_user.user%></td>
        <td><%= customer_user.registered_at %></td>
        <td><%= link_to 'Show', customer_user %></td>
        <td><%= link_to 'Edit', edit_customer_user_path(customer_user) %></td>
        <td><%= link_to 'Destroy', customer_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer User', new_customer_user_path %>
